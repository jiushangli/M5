<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="themeColor" format="color" />

    <!--    用于启动屏-->
    <style name="splash_screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/art_start</item>
        <item name="colorPrimary">#eeeeee</item>
    </style>
    <!--用于主页的抽屉-->
    <style name="leaves" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#eeeeee</item>
    </style>

    <!--    for activity-->
    <style name="coolGreen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="themeColor">@color/cool_green</item>
        <item name="android:statusBarColor">#eeeeee</item>
    </style>

    <style name="coolRed" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="themeColor">@color/cool_red</item>
        <item name="android:statusBarColor">#eeeeee</item>
    </style>

    <style name="coolCyan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="themeColor">@color/mask_cyan</item>
        <item name="android:statusBarColor">#eeeeee</item>
    </style>

    <style name="coolBlue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="themeColor">@color/blue</item>
        <item name="android:statusBarColor">#eeeeee</item>
    </style>

    <style name="coolBlack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#eeeeee</item>
        <item name="themeColor">@color/black</item>
        <item name="android:statusBarColor">#eeeeee</item>
    </style>


    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSecondary">@color/mask_pink</item>
        <item name="colorSurface">@color/mask_pink</item>
        <item name="colorOnSurfaceVariant">@color/mask_pink</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/cool_green</item> <!-- 设置进度条颜色为红色 -->
        <item name="android:thumbTint">@color/cool_green</item> <!-- 设置拇指按钮颜色为绿色 -->
    </style>
</resources>